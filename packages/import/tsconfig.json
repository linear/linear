{
  "extends": "../../tsconfig",
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "declarationDir": "dist",
    "noEmit": true,
    // @types/inquirer@7.3.3 does not pass internal type checks on new TypeScript versions.
    // Should be removed after upgrading to a newer inquirer version.
    "skipLibCheck": true,
    "allowImportingTsExtensions": true,
  },
  "exclude": ["bin", "src/_tests", "dist"]
}
